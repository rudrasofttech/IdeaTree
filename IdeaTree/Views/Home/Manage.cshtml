@model IdeaTree.Models.ManageProfileModel

@{
    ViewData["Title"] = "Update Information";
    var imagepath = !string.IsNullOrEmpty(@Model.Image) ? @Model.Image : "blank-user-150x150.jpg";
}

<link href="~/lib/croppie/croppie.css" rel="stylesheet" />
<script src="~/lib/croppie/croppie.js"></script>

<!-- The Modal -->
<div class="modal" id="UploadPIModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Upload Profile Picture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="PI-droppable">
                    <p>Drag photo here or click to upload</p>
                </div>
                <div class="PI-wrap upload-PI" style="display:none;">
                    <div class="container">
                        <div class="grid">
                            <div class="col-1-2">
                                <div class="upload-msg">
                                    Crop Photo
                                </div>
                                <div class="upload-PI-wrap">
                                    <div id="upload-PI"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="upload-result btn btn-success">Done</button>
                <button type="button" class="remove-image btn btn-danger">Remove</button>
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-7">
        <h2>Update Profile Information</h2>
        <form asp-action="manage">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Phone" />
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Phone" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Bio" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Bio" class="form-control" style="width:100%;max-height:350px;"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Picture</label>
                <div class="col-sm-10">
                    <div class="profile-img-container">
                        <img src="/ProfileImages/@imagepath" height="150" width="150" class="disimg img-thumbnail img-circle img-responsive" />
                        <a href="javascript:void(0)" title="Upload new photo" data-toggle="modal" data-target="#UploadPIModal"><span class="fa fa-upload fa-5x"></span></a>
                    </div>
                    <input type="hidden" name="Image" class="pp-upload" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Newsletter">
                        <label class="form-check-label" asp-for="Newsletter">
                            Receive updates on ideas you have posted.
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/custom/profile-photo.js"></script>
<script src="~/js/custom/dragable-upload.js"></script>