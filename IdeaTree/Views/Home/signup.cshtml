@model IdeaTree.Models.SignupModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="row justify-content-center align-items-center" style="margin:50px 0px;">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sign Up</h5>
                <form asp-action="signup"  asp-route-returnurl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input asp-for="Newsletter" type="checkbox" class="form-check-input" />
                        <label asp-for="Newsletter" class="form-check-label">Receive updates on ideas you have posted.</label>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
            </div>
        </div>

    </div>
</div>