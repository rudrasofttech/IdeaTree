@page
@model IdeaTree.Pages.Admin.CommentsModel

@{
    ViewData["Title"] = "Comments";
    ViewData["CommentsNavActive"] = "active";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th style="max-width:30%">Comment</th>
                                    <th>Who?</th>
                                    <th>When</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comment)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Content.Length > 80)
                                            {
                                                <div>@item.Content.Substring(0, 80) <button class="btn btn-link btn-xs" data-toggle="modal" data-target="#commentmodel-@item.ID">...</button></div>
                                                <div class="modal fade" id="commentmodel-@item.ID" tabindex="-1" role="dialog" aria-labelledby="Label-@item.ID" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="Label-@item.ID">@item.PostedTo.Title</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                @item.Content
                                                            </div>
                                                            <div class="modal-footer">
                                                                <form method="POST">
                                                                    <input name="commentid" value="@item.ID" type="hidden" />
                                                                    <input class="btn" type="submit" asp-page-handler="Delete" value="Delete" />
                                                                    @if (item.Status == StatusType.Unapproved)
                                                                    {
                                                                    <input class="btn" type="submit" asp-page-handler="Approve" value="Approve" />
                                                                    }
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div>@item.Content</div>
                                            }

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PostedBy.MType) - @item.PostedBy.Name
                                        </td>
                                        <td>
                                            @item.CreateDate
                                        </td>
                                        <td>@Html.DisplayFor(modelitem => item.Status)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section style {
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section scripts {
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.datatable').DataTable();
        });
    </script>
}
