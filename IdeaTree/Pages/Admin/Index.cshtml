@page
@using IdeaTree.Admin;

@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["DashboardNavActive"] = "active";
    Layout = "_Layout";
}

<div class="content">
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5 col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="far fa-lightbulb text-warning"></i>
                            </div>
                        </div>
                        <div class="col-7 col-md-8">
                            <div class="numbers">
                                <p class="card-category">Ideas</p>
                                <p class="card-title">@Model.IdeaCount
                                <p>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.LastIdea != null)
                {
                <div class="card-footer ">
                    <hr>
                    <div class="stats" title="Last Idea Posted On">
                        <i class="fa fa-calendar-o"></i> @Model.LastIdea.PostDate.ToString()
                    </div>
                </div>
                }
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5 col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="fas fa-userscoins text-success"></i>
                            </div>
                        </div>
                        <div class="col-7 col-md-8">
                            <div class="numbers">
                                <p class="card-category">Members</p>
                                <p class="card-title">@Model.MemberCount
                                <p>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.LastMember != null)
                {
                    <div class="card-footer ">
                        <hr>
                        <div class="stats" title="Last Member Registered On">
                            <i class="fa fa-calendar-o"></i> @Model.LastMember.CreateDate.ToString()
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5 col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="far fa-comments text-danger"></i>
                            </div>
                        </div>
                        <div class="col-7 col-md-8">
                            <div class="numbers">
                                <p class="card-category">Comments</p>
                                <p class="card-title">@Model.CommentCount
                                <p>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.LastComment != null)
                {
                    <div class="card-footer ">
                        <hr>
                        <div class="stats" title="Last Comment Posted On">
                            <i class="fa fa-calendar-o"></i> @Model.LastComment.CreateDate.ToString()
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-5 col-md-4">
                            <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-favourite-28 text-primary"></i>
                            </div>
                        </div>
                        <div class="col-7 col-md-8">
                            <div class="numbers">
                                <p class="card-category">Votes</p>
                                <p class="card-title">@Model.VoteCount
                                <p>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.LastVote != null)
                {
                    <div class="card-footer ">
                        <hr>
                        <div class="stats" title="Last Vote Casted On">
                            <i class="fa fa-calendar-o"></i> @Model.LastVote.CreateDate.ToString()
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header ">
                    <h5 class="card-title">Users Behavior</h5>
                    <p class="card-category">24 Hours performance</p>
                </div>
                <div class="card-body ">
                    <canvas id=chartHours width="400" height="100"></canvas>
                </div>
                <div class="card-footer ">
                    <hr>
                    <div class="stats">
                        <i class="fa fa-history"></i> Updated 3 minutes ago
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card ">
                <div class="card-header ">
                    <h5 class="card-title">Email Statistics</h5>
                    <p class="card-category">Last Campaign Performance</p>
                </div>
                <div class="card-body ">
                    <canvas id="chartEmail"></canvas>
                </div>
                <div class="card-footer ">
                    <div class="legend">
                        <i class="fa fa-circle text-primary"></i> Opened
                        <i class="fa fa-circle text-warning"></i> Read
                        <i class="fa fa-circle text-danger"></i> Deleted
                        <i class="fa fa-circle text-gray"></i> Unopened
                    </div>
                    <hr>
                    <div class="stats">
                        <i class="fa fa-calendar"></i> Number of emails sent
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card card-chart">
                <div class="card-header">
                    <h5 class="card-title">NASDAQ: AAPL</h5>
                    <p class="card-category">Line Chart with Points</p>
                </div>
                <div class="card-body">
                    <canvas id="speedChart" width="400" height="100"></canvas>
                </div>
                <div class="card-footer">
                    <div class="chart-legend">
                        <i class="fa fa-circle text-info"></i> Tesla Model S
                        <i class="fa fa-circle text-warning"></i> BMW 5 Series
                    </div>
                    <hr />
                    <div class="card-stats">
                        <i class="fa fa-check"></i> Data information certified
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>